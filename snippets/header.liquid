<header class="sticky top-0 z-40 w-full border-b border-border backdrop-blur-sm" style="background: hsl(var(--background) / 0.95);">
  <div class="container mx-auto px-4 lg:px-16">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-full bg-accent flex items-center justify-center">
          <svg class="w-5 h-5 text-accent-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
          </svg>
        </div>
        <span class="font-display text-xl font-semibold text-foreground" data-i18n="header.brand">Beautican</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-sm font-medium text-foreground hover:text-accent transition-colors" data-i18n="header.nav.home">Home</a>
        <a href="/#products" class="text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.products">Products</a>
        <a href="/products/beautican" class="text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.beautican">Beautican</a>
        <a href="/#about" class="text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.about">About</a>
      </nav>

      <!-- Right Actions -->
      <div class="flex items-center gap-3">
        <!-- Language Toggle -->
        <button
          data-language-toggle
          class="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
          aria-label="Toggle language"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
          </svg>
          <span>العربية</span>
        </button>

        <!-- Cart Button -->
        <button
          data-cart-toggle
          class="relative p-2 text-muted-foreground hover:text-foreground transition-colors"
          aria-label="Open cart"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          <span
            data-cart-count
            class="absolute -top-1 -right-1 h-5 min-w-5 rounded-full bg-accent text-accent-foreground text-xs font-bold flex items-center justify-center px-1"
            style="display: none;"
          >
            0
          </span>
        </button>

        <!-- Mobile Menu Toggle -->
        <button
          data-mobile-menu-toggle
          class="md:hidden p-2 text-muted-foreground hover:text-foreground transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    data-mobile-menu
    class="hidden md:hidden border-t border-border"
    style="background: hsl(var(--background));"
  >
    <nav class="container mx-auto px-4 py-4 flex flex-col gap-3">
      <a href="/" class="py-2 text-sm font-medium text-foreground hover:text-accent transition-colors" data-i18n="header.nav.home">Home</a>
      <a href="/#products" class="py-2 text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.products">Products</a>
      <a href="/products/beautican" class="py-2 text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.beautican">Beautican</a>
      <a href="/#about" class="py-2 text-sm font-medium text-muted-foreground hover:text-accent transition-colors" data-i18n="header.nav.about">About</a>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('click', function(e) {
    if (e.target.closest('[data-mobile-menu-toggle]')) {
      var menu = document.querySelector('[data-mobile-menu]');
      if (menu) {
        menu.classList.toggle('hidden');
      }
    }
  });

  // Update header translations
  if (typeof window.beauticanTranslations === 'undefined') {
    window.beauticanTranslations = { en: {}, ar: {} };
  }
  
  Object.assign(window.beauticanTranslations.en, {
    header: {
      brand: "Beautican",
      nav: {
        home: "Home",
        products: "Products",
        beautican: "Beautican",
        about: "About"
      }
    }
  });
  
  Object.assign(window.beauticanTranslations.ar, {
    header: {
      brand: "بيوتيكان",
      nav: {
        home: "الرئيسية",
        products: "المنتجات",
        beautican: "بيوتيكان",
        about: "عن المنتج"
      }
    }
  });
</script>
